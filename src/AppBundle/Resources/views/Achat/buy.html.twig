{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    Achat d'un concert
{% endblock %}

{% block top %}
    <section id="home">
        <div id="main-slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive" src="{{ asset('bundles/app/images/slider/bg4.jpg') }}" alt="slider">
                </div>
            </div>
        </div>
    </section>
{% endblock top %}

{% block content %}
    <section id="explore">
        <div class="container">
        {% for message in app.session.flashbag.get('success') %}
            {{ message }}
        {% endfor %}

        <a href="{{ path('concert_list') }}" class="btn btn-info pull-right" role="button">Back to the list</a>

        <h1>Achat d'un concert</h1>

        {{ form_start(achatForm) }}
            {{ form_widget(achatForm) }}

            <button type="submit" class="btn btn-primary pull-right">Acheter</button>
        {{ form_end(achatForm) }}
        </div>
    </section>
{% endblock %}
